---
import { getCollection } from "astro:content";

import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";

const blog = await getCollection("blog");
type Project = (typeof blog)[number];
---

<BaseLayout>
    <section class="w-full mx-auto py-10 px-4">
        <h1 class="text-3xl font-bold text-center mb-6">El Blog</h1>
        {
            blog.map((project: Project) => (
                <div class="min-w-xl mx-auto mb-4">
                    <Card
                        key={project.id}
                        title={project.data.title}
                        description={project.data.description}
                        link={`/blog/${project.id}/`}
                        image={project.data.image.url}
                    />
                </div>
            ))
        }
    </section>
</BaseLayout>
