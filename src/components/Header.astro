---
import type { Link } from "../interfaces/interface";

const links: Link[] = [
    { href: "/", label: "Proyectos" },
    { href: "/about", label: "Acerca de mÃ­" },
    { href: "/blog", label: "Mi Blog" },
    { href: "/contact", label: "Contacto" },
];
---

<nav
    class="w-full bg-black text-white min-h-12 flex items-center justify-between p-4"
>
    <div class="flex items-center w-full justify-between">
        <button
            id="menu-toggle"
            class="lg:hidden p-4 text-white text-2xl focus:outline-none"
        >
            â˜°
        </button>

        <div class="hidden lg:flex items-center space-x-6">
            {
                links.map(({ href, label }) => (
                    <a
                        href={href}
                        class="p-4 text-xl font-medium relative overflow-hidden group transition-all duration-300 ease-in-out"
                    >
                        <span class="relative z-10">{label}</span>
                        <span class="absolute top-0 left-0 w-0 h-full bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 transition-all duration-300 group-hover:w-full z-0" />
                    </a>
                ))
            }
        </div>

        <button
            id="dark-mode-toggle"
            class="p-3 text-2xl bg-gray-800 text-white dark:bg-white dark:text-black rounded-full transition-all duration-300"
        >
            ðŸŒ™
        </button>
    </div>

    <div
        id="mobile-menu"
        class="hidden flex flex-col bg-black w-full absolute top-16 left-0 p-6 space-y-4 lg:hidden text-xl"
    >
        {
            links.map(({ href, label }) => (
                <a
                    href={href}
                    class="p-4 text-lg font-semibold block border-b border-gray-700 text-center"
                >
                    {label}
                </a>
            ))
        }
    </div>
</nav>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");
        const darkModeToggle = document.getElementById("dark-mode-toggle");

        if (menuToggle && mobileMenu) {
            menuToggle.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
            });
        }

        if (darkModeToggle) {
            darkModeToggle.addEventListener("click", () => {
                document.documentElement.classList.toggle("dark");
            });
        }
    });
</script>
