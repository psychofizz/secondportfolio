---
export interface Props {
    name: string;
    description: string;
}

const { name, description } = Astro.props;
---

<section
    class="profile flex flex-col items-center text-center p-6 rounded-2xl shadow-lg max-w-xl mx-auto
    bg-white text-black dark:bg-gray-900 dark:text-white"
>
    <h1 class="text-4xl font-extrabold">{name}</h1>
    <p class="text-lg mt-2">{description}</p>
</section>
