---
import type { Hero } from "../interfaces/interface";

const { title, description, image } = Astro.props as Hero;

// Obtener la hora actual de Tegucigalpa (UTC-6)
const now = new Date();
const options: Intl.DateTimeFormatOptions = {
    timeZone: "America/Tegucigalpa",
    hour: "2-digit",
    minute: "2-digit",
    second: "2-digit",
    hour12: true,
};
const currentTime = now.toLocaleTimeString("es-HN", options);
---

<div
    class="bg-white text-black dark:bg-black dark:text-white min-h-64 overflow-hidden m-3 rounded-lg shadow-lg hover:scale-102 transition-transform"
>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 p-6">
        <div class="flex justify-center items-center relative">
            <!-- Imagen -->
            <img
                class="object-cover shadow-xl rounded-full w-64 h-64 transform transition-transform hover:scale-102"
                src={image}
                alt={title}
            />

            <div
                class="absolute bottom-4 left-4 bg-black font-mono dark:bg-white text-white dark:text-black px-4 py-2 rounded-full shadow-md text-sm"
            >
                <p>Tegucigalpa, Honduras</p>
                <p>{currentTime}</p>
            </div>

            <div
                class="absolute top-4 right-4 bg-black font-mono dark:bg-black text-white dark:text-black px-4 py-2 rounded-full shadow-md text-sm flex items-center gap-2"
            >
                <div class="w-2 h-2 bg-green-500 rounded-full animate-ping">
                </div>
                <span>Abierto a trabajar</span>
            </div>
        </div>

        <div class="flex flex-col justify-center">
            <h1
                class="text-5xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-blue-500 dark:from-purple-300 dark:to-blue-300 mb-4"
            >
                {title}
            </h1>
            <h2 class="text-3xl text-gray-800 dark:text-gray-300 mb-4">
                {description}
            </h2>
        </div>
    </div>
</div>
