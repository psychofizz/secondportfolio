---
interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<section class="section group">
    <h2
        class="text-2xl font-semibold text-black hover:text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-purple-500 transition-all duration-300"
    >
        {title}
    </h2>
    <slot />
</section>

<style>
    .section {
        margin-bottom: 2rem;
    }
</style>
