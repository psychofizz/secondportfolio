---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html class="dark">
    <head>
        <title>{title}</title>
        <meta charset="UTF-8" />
    </head>

    <body
        class="flex flex-col items-center min-w-full bg-white text-black dark:bg-slate-800 dark:text-white"
    >
        <Header />
        <div class="m-1">
            <slot />
        </div>
        <Footer />
    </body>
</html>
